@model SisRent.Vista.Areas.Mantencion.Models.HeaderViewModel
<header class="main-header">
    <a href="@Url.Action("Index", "Inicio", new {area = "Mantencion"})" class="logo">
        <span class="logo-mini"><b>S</b>R</span>
        <span class="logo-lg"><b>Sis</b>Rent</span>
    </a>
    <nav class="navbar navbar-static-top">
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                @if (Model.Notificaciones != null)
                {
                    <li class="dropdown notifications-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-bell-o"></i>
                            <span class="label label-warning">@Model.Notificaciones.Count</span>
                        </a>
                        <ul class="dropdown-menu">
                            @if (!Model.Notificaciones.Any())
                            {
                                <li class="header">No hay notificaciones</li>
                            }
                            else
                            {
                                <li class="header">Tiene @Model.Notificaciones.Count notificaci@(Model.Notificaciones.Count == 1 ? "ón" : "ones")</li>
                                <li>
                                    <ul class="menu">
                                        @foreach (var not in Model.Notificaciones)
                                        {
                                            var icoCol = not.Key.Split('|');
                                            <li>
                                                <a href="#">
                                                    <i class="fa fa-@icoCol[0] text-@icoCol[1]"></i> @not.Value
                                                </a>
                                            </li>
                                        }
                                    </ul>

                                </li>
                                <li class="footer"><a href="#">Ver todo</a></li>
                            }
                        </ul>
                    </li>
                }
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <img src="@Model.ImagenUsuario" class="user-image" alt="User Image">
                        <span class="hidden-xs">@Model.NombreUsuario</span>
                    </a>
                    <ul class="dropdown-menu">
                        <li class="user-header">
                            <img src="@Model.ImagenUsuario" class="img-circle" alt="User Image">
                            <p>
                                @Model.NombreCompletoUsuario
                                <small>@Model.Rol</small>
                            </p>
                        </li>
                        <li class="user-footer">
                            <div class="pull-right">
                                <a href="@Url.Action("CerrarSesion", "Inicio", new { area = "Mantencion" })" class="btn btn-default btn-flat">Cerrar Sesión</a>
                            </div>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
</header>