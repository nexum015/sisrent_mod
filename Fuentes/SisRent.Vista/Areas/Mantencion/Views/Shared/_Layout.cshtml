@using SisRent.Vista.Areas.Mantencion.Models
@{
    // *** Preconfigs ***
    var version = System.Configuration.ConfigurationManager.AppSettings.Get("Version");
    const bool light = false; // barra blanca o negra
    const string colorSkin = "red" + (light ? "-light" : ""); // blue / black / purple / green / red / yellow
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>SisRent - Mantención - @ViewBag.Title</title>
    @Styles.Render("~/Styles/AdminLTE")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", required: false)
</head>
<body class="hold-transition skin-@colorSkin sidebar-mini">
    <div class="wrapper">
        @Html.Partial("Partials/Header", (HeaderViewModel)Session["HeaderViewModel"])
        @Html.Partial("Partials/Sidebar", (SidebarViewModel)Session["SidebarViewModel"])
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Versión</b> @version
            </div>
            <strong>&copy; 2010-@DateTime.Now.Year <a href="#">OCR innovaciones</a>.</strong>
            Todos los derechos reservados.
        </footer>
    </div>
    @Scripts.Render("~/Scripts/AdminLTE")
    @RenderSection("Scripts", required: false)
</body>
</html>