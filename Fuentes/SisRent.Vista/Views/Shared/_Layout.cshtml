                            </div>
                            <div class="brand"> <span class="text-red">Traveler Renta</span> Car </div>
                        </a>
                    </div>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="@Url.Action("Index", "Home")"><p>Inicio</p></a></li>
                            <li><a href="@Url.Action("Rentar", "Home")"><p>Rentar Vehículo</p></a></li>
                            <li><a href="@Url.Action("Informacion", "Home")"><p>Información</p></a></li>
                            <li><a href="@Url.Action("Contacto", "Home")"><p>Contacto</p></a></li>
                            <li><a href="@Url.Action("Index", "Inicio", new { area = "Mantencion" })"><p>Mantención</p></a></li>
